<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bialy"
    >
    <LinearLayout
        android:background="@color/niebieskawyjasny"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageButton
            android:src="@drawable/mquesterico"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"/>
        <TextView
            android:text="mquester.com"
            android:textColor="@color/bialy"
            android:layout_gravity="center_vertical"
            android:textSize="30sp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:src="@drawable/mq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="35dp"
        android:paddingBottom="1sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">
        <EditText
            android:hint="e-mail"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="hasło"
            android:textSize="22dp"
            android:password="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:background="@color/zielony"
            android:textSize="22dp"
            android:text="Zaloguj się"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>


</LinearLayout>


